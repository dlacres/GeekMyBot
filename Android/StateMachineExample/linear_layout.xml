<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:text="Tester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step"
            android:onClick="Step"
            android:id="@+id/stepId" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="In 1"
                android:id="@+id/ViewText1ID" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:id="@+id/editText1ID" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="In 2"
                android:id="@+id/ViewText2ID" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.0"
                android:id="@+id/editText2ID" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="Out a"
                android:id="@+id/ViewTextaID" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:id="@+id/editTextaID" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="Out b"
                android:id="@+id/ViewTextbID" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:id="@+id/editTextbID" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
